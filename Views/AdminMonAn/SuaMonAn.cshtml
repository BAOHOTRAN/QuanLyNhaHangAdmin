@model QuanLyNhaHangAdmin.Models.MonAn


<h2>Sửa Món Ăn</h2>

<form method="post" enctype="multipart/form-data">
    <div class="mb-3">
        <label asp-for="MaMon" class="form-label">Mã món ăn</label>
        <input asp-for="MaMon" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TenMon" class="form-label">Tên món ăn</label>
        <input asp-for="TenMon" class="form-control" />
        <span asp-validation-for="TenMon" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="Gia" class="form-label">Giá món ăn</label>
        <input asp-for="Gia" class="form-control" />
        <span asp-validation-for="Gia" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MaLoai" class="form-label">Loại món ăn</label>
        <select asp-for="MaLoai" class="form-select" asp-items="@(new SelectList(ViewBag.DsLoai, "MaLoai", "TenLoai"))">
            <option value="">-- Chọn loại món --</option>
        </select>
        <span asp-validation-for="MaLoai" class="text-danger"></span>
    </div>
    <div class="form-group mt-2">
        <label>Hình ảnh:</label>
        <input type="file" class="form-control" name="AnhMonFile" />
        @if (!string.IsNullOrEmpty(Model?.AnhMon))
        {
            <img src="~/images/monan/@Model.AnhMon" width="120" class="mt-2" />
        }
    </div>
    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="DanhSachMonAn" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
