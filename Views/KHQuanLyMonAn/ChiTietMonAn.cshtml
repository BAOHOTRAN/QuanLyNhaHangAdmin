@{
}
@model QuanLyNhaHangAdmin.Models.MonAn

@{
    ViewData["Title"] = "Chi tiết món ăn";
}

<h2 class="mb-4">@Model.TenMon</h2>

<div class="card p-3 shadow-sm w-50">

    <p><strong>Mã món:</strong> @Model.MaMon</p>
    <p><strong>Loại món:</strong> @Model.LoaiMonAn?.TenLoai</p>
    <p><strong>Giá:</strong> @Model.Gia.ToString("C0")</p>

    <a asp-controller="KHQuanLyMonAn" asp-action="DanhSachMonAn" class="btn btn-secondary mt-3">
        Quay lại danh sách
    </a>
</div>
