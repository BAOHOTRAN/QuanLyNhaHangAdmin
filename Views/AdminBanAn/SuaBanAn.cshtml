@model QuanLyNhaHangAdmin.Models.BanAn

<h2>Sửa bàn ăn</h2>

<form asp-area="Admin" asp-action="SuaBanAn" method="post">
    <div class="mb-3">
        <label class="form-label">Mã bàn</label>
        <input asp-for="MaBan" class="form-control" readonly />
        <span asp-validation-for="MaBan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Tên bàn</label>
        <input asp-for="TenBan" class="form-control" />
        <span asp-validation-for="TenBan" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Số chỗ</label>
        <input asp-for="SoCho" type="number" class="form-control" />
        <span asp-validation-for="SoCho" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label class="form-label">Trạng thái</label>
        <select asp-for="TrangThai" class="form-control">
            <option value="Trống">Trống</option>
            <option value="Đang phục vụ">Đang phục vụ</option>
            <option value="Đặt trước">Đặt trước</option>
        </select>
        <span asp-validation-for="TrangThai" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Lưu thay đổi</button>
    <a asp-area ="Admin" asp-action="DanhSachBanAn" class="btn btn-secondary">Hủy</a>
</form>
