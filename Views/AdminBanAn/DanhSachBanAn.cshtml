@{
}
@model IEnumerable<QuanLyNhaHangAdmin.Models.BanAn>

<h2>Danh sách bàn ăn</h2>

<a asp-area="Admin" asp-action="ThemBanAn" class="btn btn-primary mb-3">Thêm bàn ăn</a>

<table class="table table-bordered table-striped">
    <thead>
        <tr>
            <th>Mã bàn</th>
            <th>Tên bàn</th>
            <th>Số chỗ</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var b in Model)
        {
            <tr>
                <td>@b.MaBan</td>
                <td>@b.TenBan</td>
                <td>@b.SoCho</td>
                <td>@b.TrangThai</td>
                <td>
                    <a asp-area="Admin" asp-action="SuaBanAn" asp-route-id="@b.MaBan" class="btn btn-warning btn-sm">Sửa</a>
                    <a asp-area="Admin" asp-action="ChiTietBanAn" asp-route-id="@b.MaBan" class="btn btn-info btn-sm">Chi tiết</a>
                    <a asp-area="Admin" asp-action="XoaBanAn" asp-route-id="@b.MaBan" class="btn btn-danger btn-sm">Xoá</a>
                </td>
            </tr>
        }
    </tbody>
</table>
