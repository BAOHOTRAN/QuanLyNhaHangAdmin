@model QuanLyNhaHangAdmin.Models.DatMon

<h2>Sửa đặt món</h2>

<form asp-action="SuaDatMon" method="post">

    <input type="hidden" asp-for="MaDatMon" />

    <div class="mb-3">
        <label>Đặt bàn</label>
        <select asp-for="MaDatBan" class="form-control">
            @foreach (var db in ViewBag.DanhSachDatBan)
            {
                <option value="@db.MaDatBan" selected="@(db.MaDatBan == Model.MaDatBan)">
                    @db.MaDatBan
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Món ăn</label>
        <select asp-for="MaMon" class="form-control">
            @foreach (var mon in ViewBag.DanhSachMon)
            {
                <option value="@mon.MaMon" selected="@(mon.MaMon == Model.MaMon)">
                    @mon.TenMon
                </option>
            }
        </select>
    </div>

    <div class="mb-3">
        <label>Số lượng</label>
        <input asp-for="SoLuong" type="number" class="form-control" />
    </div>

    <div class="mb-3">
        <label>Ghi chú</label>
        <input asp-for="GhiChu" class="form-control" />
    </div>

    <button class="btn btn-primary">Cập nhật</button>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</form>
