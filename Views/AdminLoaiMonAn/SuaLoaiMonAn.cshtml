@model QuanLyNhaHangAdmin.Models.LoaiMonAn

@{
    ViewData["Title"] = "Sửa Loại Món Ăn";
}

<h2>Sửa Loại Món Ăn</h2>

<form asp-action="SuaLoaiMonAn" method="post">
    <div class="mb-3">
        <label asp-for="MaLoai" class="form-label">Mã loại</label>
        <input asp-for="MaLoai" class="form-control" readonly />
    </div>

    <div class="mb-3">
        <label asp-for="TenLoai" class="form-label">Tên loại</label>
        <input asp-for="TenLoai" class="form-control" />
        <span asp-validation-for="TenLoai" class="text-danger"></span>
    </div>

    <div class="mb-3">
        <label asp-for="MoTa" class="form-label">Mô tả</label>
        <textarea asp-for="MoTa" class="form-control"></textarea>
        <span asp-validation-for="MoTa" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Cập nhật</button>
    <a asp-action="DanhSachLoaiMonAn" class="btn btn-secondary">Hủy</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
