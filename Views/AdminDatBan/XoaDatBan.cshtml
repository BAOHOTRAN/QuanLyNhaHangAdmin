@model QuanLyNhaHangAdmin.Models.DatBan

@{
    ViewData["Title"] = "Xóa đặt bàn";
}

<div class="alert alert-warning">
    Bạn có chắc chắn muốn xóa đặt bàn này không?
</div>

<div class="card mb-3">
    <div class="card-header">
        Thông tin đặt bàn
    </div>
    <div class="card-body">
        <dl class="row">
            <dt class="col-sm-3">Mã đặt bàn</dt>
            <dd class="col-sm-9">@Model.MaDatBan</dd>

            <dt class="col-sm-3">Bàn</dt>
            <dd class="col-sm-9">@Model.BanAn?.TenBan ?? "Chưa chọn"</dd>

            <dt class="col-sm-3">Khách hàng</dt>
            <dd class="col-sm-9">@Model.KhachHang?.HoTen ?? "Chưa chọn"</dd>

            <dt class="col-sm-3">Ngày đặt</dt>
            <dd class="col-sm-9">@Model.NgayDat.ToString("dd/MM/yyyy")</dd>

            <dt class="col-sm-3">Giờ đặt</dt>
            <dd class="col-sm-9">@Model.GioDat.ToString(@"hh\:mm")</dd>

            <dt class="col-sm-3">Số người</dt>
            <dd class="col-sm-9">@Model.SoNguoi</dd>

            <dt class="col-sm-3">Trạng thái</dt>
            <dd class="col-sm-9">@Model.TrangThai</dd>
        </dl>
    </div>
</div>

<form asp-action="XoaDatBan" method="post">
    <input type="hidden" name="id" value="@Model.MaDatBan" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="DanhSachDatBan" class="btn btn-secondary">Hủy</a>
</form>
